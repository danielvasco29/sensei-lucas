{
  "openapi": "3.0.3",
  "info": {
    "title": "sensei-lucas",
    "description": "API Cadastro de Usuários",
    "contact": {
      "email": "danielvasconcelos.reis@gmail.com"
    },
    "version": "0.1.0"
  },
  "servers": [
    {
      "url": "http://localhost:7000/",
      "description": "Servidor Local"
    }
  ],
  "tags": [
    {
      "name": "Usuário",
      "description": "Operações sobre Usuários"
    },
    {
      "name": "Sessão",
      "description": "Operações sobre sessões de Usuários"
    }
  ],
  "paths": {
    "/users/create": {
      "post": {
        "tags": [
          "Usuário"
        ],
        "summary": "Criar novo Usuário",
        "operationId": "createUser",
        "requestBody": {
          "description": "Criar um objeto de um usuário",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/createUser"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Objeto criado com sucesso!",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/user"
                }
              }
            }
          },
          "409": {
            "description": "Conflito, usuário já existe!",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "User already exists!"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/users/read": {
      "get": {
        "tags": [
          "Usuário"
        ],
        "summary": "Ler perfil de Usuário",
        "operationId": "readUser",
        "parameters": [
          {
            "in": "header",
            "name": "x-users-id",
            "description": "Listar um usuário pelo ID",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Usuário encontrado com sucesso!",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/readUser"
                }
              }
            }
          },
          "404": {
            "description": "Usuário não encontrado!",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "User not exists!"
                    }
                  }
                }
              }
            }
          }
        },
        "security": [
          {
            "bearerAuth": []
          }
        ]
      }
    },
    "/users/update": {
      "put": {
        "tags": [
          "Usuário"
        ],
        "summary": "Alterar perfil de Usuário",
        "operationId": "updateUser"
      }
    },
    "/users/delete": {
      "delete": {
        "tags": [
          "Usuário"
        ],
        "summary": "Deletar permanentemente Usuário",
        "operationId": "deleteUser",
        "parameters": [
          {
            "in": "header",
            "name": "x-users-id",
            "description": "Id's de usuários separados por ', '",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "204": {
            "description": "Objeto deletado com sucesso!"
          },
          "404": {
            "description": "Usuário não encontrado!",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "User not found!"
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Token inválido",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Invalid Token"
                    }
                  }
                }
              }
            }
          }
        },
        "security": [
          {
            "bearerAuth": []
          }
        ]
      }
    },
    "/users/all": {
      "get": {
        "tags": [
          "Usuário"
        ],
        "summary": "Ler todos os perfis de Usuário",
        "operationId": "allUsers"
      }
    },
    "/sessions/login": {
      "post": {
        "tags": [
          "Sessão"
        ],
        "summary": "Gerar token de acesso de um Usuário",
        "operationId": "userLogin",
        "requestBody": {
          "description": "Criar um objeto de um usuário",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/login"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Usuário autenticado com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/token"
                }
              }
            }
          },
          "400": {
            "description": "Usuário ou senha incorreta!",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Incorrect Email or Password"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/sessions/logout": {
      "delete": {
        "tags": [
          "Sessão"
        ],
        "summary": "Deletar token de acesso de um Usuário",
        "operationId": "userLogout"
      }
    }
  },
  "components": {
    "schemas": {
      "user": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "example": "41c22ef1-b94f-4eca-8c2e-fca12347a2c8"
          },
          "name": {
            "type": "string",
            "example": "Guilherme"
          },
          "email": {
            "type": "string",
            "format": "email"
          },
          "isAdmin": {
            "type": "boolean",
            "example": "true"
          },
          "password": {
            "type": "string",
            "example": "minhasenha123"
          },
          "birthDate": {
            "type": "string",
            "format": "date-time"
          },
          "cellNumber": {
            "type": "string",
            "example": "556190009000"
          },
          "createdAt": {
            "type": "string",
            "format": "date-time"
          },
          "updatedAt": {
            "type": "string",
            "format": "date-time"
          }
        },
        "required": [
          "name",
          "email",
          "isAdmin",
          "password"
        ]
      },
      "readUser": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "example": "41c22ef1-b94f-4eca-8c2e-fca12347a2c8"
          },
          "name": {
            "type": "string",
            "example": "Guilherme"
          },
          "email": {
            "type": "string",
            "format": "email"
          },
          "isAdmin": {
            "type": "boolean",
            "example": "true"
          },
          "birthDate": {
            "type": "string",
            "format": "date-time"
          },
          "cellNumber": {
            "type": "string",
            "example": "556190009000"
          },
          "createdAt": {
            "type": "string",
            "format": "date-time"
          },
          "updatedAt": {
            "type": "string",
            "format": "date-time"
          }
        },
        "required": [
          "name",
          "email",
          "isAdmin",
          "password"
        ]
      },
      "readId": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          }
        }
      },
      "createUser": {
        "type": "object",
        "minProperties": 4,
        "properties": {
          "name": {
            "type": "string",
            "example": "Guilherme"
          },
          "email": {
            "type": "string",
            "format": "email"
          },
          "isAdmin": {
            "type": "boolean",
            "example": "true"
          },
          "password": {
            "type": "string",
            "example": "minhasenha123"
          },
          "birthDate": {
            "type": "string",
            "format": "date-time"
          },
          "cellNumber": {
            "type": "string",
            "example": "556190009000"
          }
        },
        "required": [
          "name",
          "email",
          "isAdmin",
          "password"
        ]
      },
      "login": {
        "type": "object",
        "minProperties": 2,
        "properties": {
          "email": {
            "type": "string",
            "format": "email"
          },
          "password": {
            "type": "string",
            "example": "minhasenha123"
          }
        },
        "required": [
          "email",
          "password"
        ]
      },
      "token": {
        "type": "object",
        "minProperties": 1,
        "properties": {
          "newToken": {
            "type": "string",
            "example": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJlbWFpbCI6ImRhbmllbHZhc2NvbmNlbG9zLnJlaXNAZ21haWwuY29tIiwiaWF0IjoxNjYzNzQ5MjQ4LCJleHAiOjE2NjM4MzU2NDgsInN1YiI6ImY0OTQxYjQ2LWMyYTAtNDRlNy05YzBhLTA0OTA2MzE0ZWFhYiJ9.l-ExFuOBloLotmftK-dVovnJbvkxIgosXDHIlaXqhAk"
          }
        }
      }
    },
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  }
}