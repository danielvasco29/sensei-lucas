{
  "openapi": "3.0.3",
  "info": {
    "title": "Lets-Dev",
    "description": "API Desenvolvida no lets-dev 2.0",
    "contact": {
      "email": "danielvasconcelos.reis@gmail.com"
    },
    "version": "0.1.0"
  },
  "externalDocs": {
    "description": "Veja nosso conteúdo do notion",
    "url": "https://www.notion.so/paipe/Projeto-Final-Let-s-Dev-59e0052f43c542d6b488c5ebd49163f3"
  },
  "servers": [
    {
      "url": "http://localhost:7000/api-docs",
      "description": "Servidor Local"
    }
  ],
  "tags": [
    {
      "name": "Usuário",
      "description": "Operações sobre Usuários"
    },
    {
      "name": "Sessão",
      "description": "Operações sobre sessões de Usuários"
    }
  ],
  "paths": {
    "/users/create": {
      "post": {
        "tags": ["Usuário"],
        "summary": "Criar novo Usuário",
        "operationId": "createUser",
        "requestBody": {
          "description": "Criar um objeto de um usuário",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/createUser"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Objeto criado com sucesso!",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/user"
                }
              }
            }
          },
          "409": {
            "description": "Conflito, usuário já existe!",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "User already exists!"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/users/read": {
      "get": {
        "tags": ["Usuário"],
        "summary": "Ler perfil de Usuário",
        "operationId": "readUser"
      }
    },
    "/users/update": {
      "put": {
        "tags": ["Usuário"],
        "summary": "Alterar perfil de Usuário",
        "operationId": "updateUser"
      }
    },
    "/users/delete": {
      "delete": {
        "tags": ["Usuário"],
        "summary": "Deletar permanentemente Usuário",
        "operationId": "deleteUser"
      }
    },
    "/users/all": {
      "get": {
        "tags": ["Usuário"],
        "summary": "Ler todos os perfis de Usuário",
        "operationId": "allUsers"
      }
    },
    "/sessions/login": {
      "post": {
        "tags": ["Sessão"],
        "summary": "Gerar token de acesso de um Usuário",
        "operationId": "userLogin"
      }
    },
    "/sessions/logout": {
      "delete": {
        "tags": ["Sessão"],
        "summary": "Deletar token de acesso de um Usuário",
        "operationId": "userLogout"
      }
    }
  },
  "components": {
    "schemas": {
      "user": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "example": "41c22ef1-b94f-4eca-8c2e-fca12347a2c8"
          },
          "name": {
            "type": "string",
            "example": "Guilherme"
          },
          "email": {
            "type": "string",
            "format": "email"
          },
          "isAdmin": {
            "type": "boolean",
            "example": "true"
          },
          "password": {
            "type": "string",
            "example": "minhasenha123"
          },
          "birthDate": {
            "type": "string",
            "format": "date-time"
          },
          "cellNumber": {
            "type": "string",
            "example": "556190009000"
          },
          "createdAt": {
            "type": "string",
            "format": "date-time"
          },
          "updatedAt": {
            "type": "string",
            "format": "date-time"
          }
        },
        "required": ["name", "email", "isAdmin", "password"]
      },
      "createUser": {
        "type": "object",
        "minProperties": 4,
        "properties": {
          "name": {
            "type": "string",
            "example": "Guilherme"
          },
          "email": {
            "type": "string",
            "format": "email"
          },
          "isAdmin": {
            "type": "boolean",
            "example": "true"
          },
          "password": {
            "type": "string",
            "example": "minhasenha123"
          },
          "birthDate": {
            "type": "string",
            "format": "date-time"
          },
          "cellNumber": {
            "type": "string",
            "example": "556190009000"
          }
        },
        "required": ["name", "email", "isAdmin", "password"]
      }
    },
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  }
}
