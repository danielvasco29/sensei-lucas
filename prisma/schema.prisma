generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./database.sqlite"
}

model User {
  id String @id @default(uuid())

  name       String
  email      String    @unique
  isAdmin    Boolean   @default(false)
  password   String
  birthDate  DateTime?
  cellNumber String?   @unique

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  Tokens     Tokens?
  BookRented RentUserBook[]

  @@map("user")
}

model Tokens {
  id String @id @default(uuid())

  token      String
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  User   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId String @unique

  @@map("tokens")
}

model Bookstore {
  id String @id @default(uuid())

  name       String
  adress     String
  created_at DateTime         @default(now())
  updated_at DateTime         @updatedAt
  Book       BookstoreBooks[]

  @@map("bookstore")
}

model Book {
  id String @id @default(uuid())

  name      String
  author    String
  hourValue Float

  Bookstore BookstoreBooks[]

  @@map("book")
}

model BookstoreBooks {
  id String @id @default(uuid())

  Bookstore   Bookstore @relation(fields: [bookstoreId], references: [id], onDelete: Cascade)
  bookstoreId String
  Book        Book      @relation(fields: [bookId], references: [id], onDelete: Cascade)
  bookId      String

  rented Boolean        @default(false)
  Rented RentUserBook[]

  @@map("bookstore_books")
}

model RentUserBook {
  id String @id @default(uuid())

  rented_at DateTime @default(now())

  User             User           @relation(fields: [userId], references: [id], onUpdate: Cascade, onDelete: Cascade)
  userId           String
  BookstoreBooks   BookstoreBooks @relation(fields: [bookstoreBooksId], references: [id], onUpdate: Cascade, onDelete: Cascade)
  bookstoreBooksId String

  @@map("rent_user_book")
}
